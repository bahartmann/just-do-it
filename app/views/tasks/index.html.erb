<div class="card">
  <div class="card-body">
    <h4 class="card-title text-center"><%=current_user.name%>'s tasks</h4>

    <table class="table table-hover">
      <tbody>
        <% @tasks.each do |task| %>
          <tr class="task d-flex">
            <td class="col-1"><%= content_tag(:i, "", class: check_icon_class(task.done)) %></td>
            <td class="col-9"><%= task.description %></td>
            <td class="col-2"><%= link_to 'Edit', edit_task_path(task) %></td>
          </tr>
        <% end %>
        <tr>
          <td colspan="3"><%= link_to 'New Task', new_task_path %></td>
        </tr>
      </tbody>
    </table>

  </div>

</div>
